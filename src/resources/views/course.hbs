<div class="mt-4">
    <div class="row">

        {{#each courses}}

        <div class="col-md-3">
            <div class="card">
                <a href="/students/{{this.slug}}">
                    <img src="./assets/img/{{this.image}}" alt="">
                </a>
                <div class="card-body">
                    <a href="/students/{{this.slug}}">
                        <h5 class="card-title">{{this.title_post}}</h5>
                    </a>
                    <p class="card-text">{{this.describe_student}}</p>
                    <a href="/students/{{this.slug}}" class="btn btn-primary">go /:slug</a>
                </div>
            </div>
        </div>
        
        {{/each}}

