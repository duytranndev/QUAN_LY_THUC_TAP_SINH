<div class="container create">

  <form class="mt-4" method="POST" action="/admin/students/store" enctype="multipart/form-data">

    <div class="main">
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <h1 class="Title">Quản lý Sinh Viên</h1>
          <div class="form-group">


            <label for=""><b>Họ và tên : </b></label>
            <input type="text" name="name" id="" class="form-control" placeholder="..." aria-describedby="helpId">

            <label for=""><b>Mã Số Sinh Viên</b></label>
            <input type="text" name="mssv" id="" class="form-control" placeholder="..." aria-describedby="helpId">

            <label for=""><b>Ngày sinh: </b></label>
            <input type="date">

            <div class="form-group">
              <label>Giới tính</label>
              <select name="gender_student" id="gender">
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
              </select>
            </div>


            <label for=""><b>Liên hệ</b></label>
            <input type="text" name="lien_he" id="" class="form-control" placeholder="..." aria-describedby="helpId">

            <label for=""><b>Liên hệ</b></label>
            <input type="email" name="email" id="" class="form-control" placeholder="..." aria-describedby="helpId">

            <label for=""><b>Hình ảnh:</b></label>
            <input type="file">


            <input type="text" name="lop" id="" class="form-control" placeholder="Lớp" aria-describedby="helpId"><br>

            <label for=""><b>Khóa học:</b></label>

            <select name="idKhoa">
              {{#each courses}}
              <option value="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </select>

            <div class="mota"></div>
            <textarea class="form-control" id="message" name="message" placeholder="Description about student"
              rows="5"></textarea>




            <div class="btn-toolbar text-center">
              <button type="submit" class="btn btn-primary btn-color btn-bg-color btn-sm col-xs-4 nut"
                style="margin-left: 170px;" ;>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Thêm
              </button>

            </div>
          </div>



        </div>
      </div>
      <div class="col-sm-3"></div>
    </div>


  </form>
</div>


