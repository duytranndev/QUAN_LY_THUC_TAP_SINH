<form class="mt-4" method="POST" action="/students/store" enctype="multipart/form-data">
//get du lieu, post la day len
  
  <div class="form-group">
    <label>Mã sinh viên</label>
    <input type="text" class="form-control"  name="mssv_student" placeholder="ID Student">
  </div>
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control"  name="name_student" placeholder="Name">
  </div>
  <div class="form-group">
    <label>Birth Day</label>
    <input type="date" class="form-control" name="birthday_student" placeholder="Birth Day">
  </div>
  <div class="form-group">
    <label>Gender</label>
    <select name="gender_student" id="gender">
    <option value="Nam">Nam</option>
    <option value="Nữ">Nữ</option>
  </select>
  </div>
  <div class="form-group">
    <label>Class</label>
    <input type="text" class="form-control"  name="class_student" placeholder="Class">
  </div>
  <div class="form-group">
    <label>Describe</label>
    <textarea type="text" class="form-control" name="describe_student" placeholder="Describe"></textarea>
  </div>
  <div class="custom-file">
    <input type="file" name="image_student">
  </div>
  <button type="submit" class="btn btn-primary">Thêm</button>
</form>