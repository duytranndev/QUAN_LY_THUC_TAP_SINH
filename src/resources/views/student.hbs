<div class="mt-4">
    <div class="row">

        {{#each students}}

        <div class="col-md-3">
            <div class="card">
                <a href="/students/{{this.slug}}">
                    <img style="width: 100%; height: 200px;" src="./assets/img/{{this.image}}" alt="">
                </a>
                <div class="card-body">
                    <a href="/students/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.name}}</p>
                    <a href="/students/{{this.slug}}" class="btn btn-primary">go /:slug</a>
                </div>
            </div>
        </div>

        {{/each}}


    </div>
</div>