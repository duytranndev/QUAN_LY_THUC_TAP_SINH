{{!-- tao form trong de phuc vu cho viec submit --}}
<form name="delete-enterprise" class="mt-4" method="POST" ></form>
{{!-- document.forms['delete-enterprise'] lấy ra thằng form--}} 

<script>
    document.addEventListener('DOMContentLoaded', function () {

        var enterpriseID;
        var deleteForm = document.forms['delete-enterprise'];
        var btnDeleteEnterprise = document.getElementById('btn-delete-enterprise');

        //when dialog confirm clicked
        $('#delete-enterprise-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            enterpriseID = button.data('id');//id này được nạp từ thằng data-id={{this.id_enterprise}}, nó là id
            
        });
        
        btnDeleteEnterprise.onclick = function(){
            deleteForm.action ='/enterprises/' +enterpriseID+'?_method=DELETE';
            deleteForm.submit();//submit form delete
        };
    })
</script>




