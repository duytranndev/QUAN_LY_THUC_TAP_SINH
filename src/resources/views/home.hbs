<div class="mt-4">
    <div class="row">

        {{#each data}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="./assets/img/{{this.image}}" alt="">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.name}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {{/each}}


    </div>
</div>