<div class="table mt-4">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}

        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td><img class="card-img-top" src="../assets/img/{{this.image}}" alt=""></td>
          <td><a href="/courses/{{this.name}}/edit" class="btn btn-link">Sua</a></td>
          <td><a href="" class="btn btn-link">Xoa</a></td>

        </tr>

        {{/each}}
      </tbody>
    </table>
  </div>
</div>